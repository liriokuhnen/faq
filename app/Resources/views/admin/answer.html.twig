{% extends 'admin/base.html.twig' %}

{% block body %}


<h2 style="float: left;">FAQ Answers</h2>

<a href='/admin/answer/create' class="btn btn-success" style="float: right; margin:20px;"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Create</a></h2>

<br style="clear:both;" />

{% if answers %}
<table class="table table-striped">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  {% for answer in answers %}
    <tr>
      <td>{{ answer.question }}</td>
      <td>{{ answer.answer }}</td>
      <td><a href="/admin/answer/edit/{{ answer.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
      <td><a href="/admin/answer/delete/{{ answer.id }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% else %}
No records found
{% endif %}

{% endblock %}